#include "shell.h"

int main(void)
{
    char *line;
    char **args;
    int status;

    signal(SIGINT, handle_signal); /* Register signal handler */

    do {
        printf("($) ");
        line = read_line();
        args = split_line(line);
        status = execute_command(args);

        free(line);
        free_memory(args);
    } while (status);

    return 0;
}
